{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@atoms/*": [
        "components/atoms/*"
      ],
      "@molecules/*": [
        "components/molecules/*"
      ],
      "@organisms/*": [
        "components/organisms/*"
      ],
      "@templates/*": [
        "components/templates/*"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@theme/*": [
        "theme/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "types/*": [
        "types/*"
      ],
    }
  },
  "include": [
    "src",
    "src/*",
    "src/**/*"
  ]
}